@model LikeBusLogistic.Web.Models.Account.LoginVM
@{
    Layout = null;
    var hasError = ViewBag.HasError ?? false;
    var errorMessage = ViewBag.ErrorMessage;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Войти в систему LikeBusLogistic</title>
    <link href="~/lib/uikit/css/uikit.css" rel="stylesheet" />
</head>
<body>
    <div class="uk-flex-center uk-padding" uk-grid>
        <div class="uk-width-1-1@s uk-width-1-2@m uk-width-1-3@l uk-width-1-4@xl">
            <div class="uk-card uk-card-default uk-card-hover uk-card-body">
                <form asp-controller="Account" asp-action="Login">
                    <fieldset class="uk-fieldset uk-text-center">
                        <legend class="uk-legend">LikeBusLogistic</legend>
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input" type="text" asp-for="Login" tabindex="1" value="@Model.Login">
                            </div>
                        </div>
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <button type="button" class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock" onclick="showPassword()" tabindex="3"></button>
                                <input class="uk-input" type="password" id="password" asp-for="Password" value="@Model.Password" tabindex="2">
                            </div>
                        </div>
                        <div class="uk-margin">
                            <button type="submit" class="uk-button uk-button-primary">Войти</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>


    <script src="~/lib/uikit/js/uikit.js"></script>
    <script src="~/lib/uikit/js/uikit-icons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        localStorage.setItem('isLoggedOff', 'false');
        function showPassword() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        @if (hasError)
        {
        @: App.message.showErrorWithOk('Ошибка', '@Html.Raw(errorMessage)');
        }
    </script>
</body>
</html>