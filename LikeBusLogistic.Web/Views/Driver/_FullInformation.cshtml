@model LikeBusLogistic.Web.Models.Drivers.FullInformationVM

<ul uk-tab>
    <li class="@(Model.Tab == DriverTab.Info ? "uk-active" : "")" data-url="@Url.Action("_FullInformation", "Driver", new { tab = DriverTab.Info })"><a href="#">Водители</a></li>
    <li class="@(Model.Tab == DriverTab.Contact ? "uk-active" : "")" data-url="@Url.Action("_FullInformation", "Driver", new { tab = DriverTab.Contact })"><a href="#">Контакты</a></li>
</ul>
<ul class="uk-switcher uk-margin">
    <li>
        @{
            await Html.RenderPartialAsync("_Information.cshtml", new LikeBusLogistic.Web.Models.Drivers.InformationVM { Drivers = Model.Drivers });
        }
    </li>
    <li>
        @{
            await Html.RenderPartialAsync("_Contacts.cshtml", new LikeBusLogistic.Web.Models.Drivers.ContactsVM { Contacts = Model.Contacts });
        }
    </li>
</ul>

<script>
    App.footer.setBreadcrumbs([{ name: 'Водители', url: '@Url.Action("_FullInformation", "Driver")' }]);
    App.geo.clearLocations();
    App.geo.route.clear();
    App.tab.name = 'driver';
</script>