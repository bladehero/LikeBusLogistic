@model ContactsVM
@{
    RoleName roleName = (RoleName)ViewBag.RoleName;
}
<div class="uk-clearfix">
    <div class="uk-float-left">
        <h4>Контакты</h4>
    </div>
    <div class="uk-float-right">
        @if (roleName == RoleName.Administrator || roleName == RoleName.Moderator)
        {
            <button class="uk-button uk-button-small uk-button-primary" id="add-contact-button">Добавить</button>
        }
    </div>
</div>
<table class="uk-table uk-table-small uk-table-hover" id="contact-table">
    <thead>
        <tr>
            <th>Водитель</th>
            <th>Контакт</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr data-contact-id="@contact.Id">
                <td>@contact.DriverInfo</td>
                <td>@contact.Contact</td>
                <td class="uk-float-right">
                    @if (roleName == RoleName.Administrator || roleName == RoleName.Moderator)
                    {
                        <span class="uk-text-warning uk-margin-small-right edit-contact-icon" uk-icon="icon: cog;"></span>
                    }
                    @if (roleName == RoleName.Administrator)
                    {
                        <span class="uk-text-danger delete-contact-icon" uk-icon="icon: trash;"></span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    app.footer.setBreadcrumbs([{ name: 'Водители', url: '@Url.Action("_FullInformation", "Driver")' }, { name: 'Контакты', url: '@Url.Action("_Contacts","Driver")' }]);
    $(document).ready(function () {
        $('#contact-table').dataTable();
        $('.edit-contact-icon').click(function () {
            var id = $(this).parents('tr').data('contact-id');
            app.footer.getContent('@Url.Action("_MergeContact", "Driver")', { contactId: id });
        });
        $('.delete-contact-icon').click(function () {
            var id = $(this).parents('tr').data('contact-id');
            app.postDataOnServer('@Url.Action("DeleteOrRestoreContact", "Driver")', { contactId: id }, function (message) {
                app.message.showSuccessWithOk('Успешно', message || 'Машина успешно удалена!');
                app.useContentState();
            });
        });
        $('#add-contact-button').click(function () {
            app.footer.getContent('@Url.Action("_MergeContact", "Driver")');
        });
    });
</script>